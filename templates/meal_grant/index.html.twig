{% extends 'base.html.twig' %}

{% block title %}Indemnités repas{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h4">Indemnités repas</h1>
        <a href="{{ path('home') }}" class="lead"><u>Retour</u></a> 
        <hr>  
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success m-3" role="alert">
                {{ message }}
            </div>
        {% endfor %}        
        {{ form_start(form) }}
            {{ form_errors(form) }}
            <div>
                <div class="form-row">
                    <div class="col-auto">
                        {{ form_label(form.month) }}
                        {{ form_widget(form.month) }}
                    </div>
                    <div class="col-auto">
                        {{ form_label(form.year) }}
                        {{ form_widget(form.year) }}
                    </div>
                </div>
            </div>
            <div 
                class="mealgrants" 
                data-prototype="{{ include('meal_grant/_form_prototype.html.twig', { 'mealgrant': form.mealgrants.vars.prototype }) |e('html_attr') }}">
                {% for mealgrant in form.mealgrants %}
                    {{ include('meal_grant/_form_prototype.html.twig') }}
                {% endfor %}   
            </div>
            <div class="mt-3 text-right">
                <input type="submit" class="btn btn-primary" value="Envoyer">
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('assets/js/clientAutocomplete.js?version=1') }}"
            type="application/javascript">
    </script>

    <script src="{{ asset('assets/js/mealgrants.js?version=1') }}"
            type="application/javascript">
    </script>

{% endblock %}