{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <form method="post" {# action="{{ path('app_login') }}" #} class="col-12 col-md-8 offset-md-2 col-lg-4 offset-lg-4">

            <h1 class="h3 mb-3 font-weight-normal">Bienvenue !</h1>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
            </div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            <button class="btn btn-primary" type="submit">
                Se connecter
            </button>

            <p class="mt-3"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a></p>
        </form>
    </div>
</div>
{% endblock %}
