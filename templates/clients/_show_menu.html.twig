<a href="{{ path('client_add') }}" class="list-group-item list-group-item-action">Nouveau client</a>
<a href="{{ path('client_edit', { 'id': client.id }) }}" class="list-group-item list-group-item-action">Modifier</a>
<a href="{{ path('client_archive', { 'id': client.id }) }}" class="list-group-item list-group-item-action">
    {% if client.archivedAt is null %}
        Archiver
    {% else %}
        Rendre non archivé
    {% endif %}
</a>

<a class="list-group-item list-group-item-action" data-toggle="collapse" href="#delete-menu" role="button" aria-expanded="false" aria-controls="delete-menu">
    Supprimer définitivement
</a>
<div class="collapse" id="delete-menu">
    <div class="card card-body d-flex flex-row justify-content-around">
        <a href="{{ path('client_delete', { 'id': client.id }) }}" role="button" class="btn btn-danger delete-confirm" id="delete-confirm">
            Confirmer
        </a>
        <button role="button" class="btn btn-secondary" data-toggle="collapse" href="#delete-menu" role="button" aria-expanded="false" aria-controls="delete-menu">
            Annuler
        </button>
    </div>
</div>