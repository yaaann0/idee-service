{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 mt-5">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="h3 mb-3">Nouveau mot de passe</h1>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="mt-3">
                    <p>
                        Renseignez votre adresse email, <br>
                        un lien pour réinitialiser votre mot de passe vous sera envoyé.
                    </p>
                </div>

                <button class="btn btn-primary mt-3">Envoyer le message</button>
            {{ form_end(requestForm) }}
        </div>
    </div>

{% endblock %}